<h1><%= @restaurant.name %></h1>
<h3>Cuisine: <%= @restaurant.category.capitalize() %></h3>
<p>Loacation: <%= @restaurant.address %></p>
<p>Phone number:<%= @restaurant.phone_number %></p>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>

<% @restaurant.reviews.each do | review|  %>
  <p>Rating: <%= review.rating %>, Comments:<%= review.content %> </p>
<% end %>



<%= link_to "Back to the list", restaurants_path %>
